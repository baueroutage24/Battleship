<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/connectionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_overlay"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/connectionOverlayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Overlay"
            android:textAlignment="center"
            android:textSize="10pt" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ipLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/boomicon"
            android:src="@drawable/boomicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/label_ip"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="192"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="168"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ip4"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:text="100"
            android:textSize="25sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/portLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ipLayout"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/boomicon"
            android:src="@drawable/boomicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/label_port"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:text="50002"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portLayout"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/boomicon"
            android:src="@drawable/boomicon" />

        <TextView
            android:id="@+id/playerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:text="Player name:"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:textSize="25sp" >
        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerNameLayout"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/icon_connect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/connectButton"
            android:layout_alignTop="@+id/connectButton"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/connectButton"
            android:contentDescription="@string/boomicon"
            android:src="@drawable/boomicon"
            android:visibility="invisible" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/center"
            android:background="#FFFFFF"
            android:onClick="openSocket"
            android:text="@string/connect"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/center"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:contentDescription="@id/center" />

        <ImageView
            android:id="@+id/icon_disconnect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/connectButton"
            android:layout_alignTop="@+id/disconnectButton"
            android:layout_toRightOf="@+id/center"
            android:contentDescription="@string/boomicon"
            android:src="@drawable/boomicon"
            android:visibility="invisible" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@+id/icon_disconnect"
            android:background="#FFFFFF"
            android:onClick="onDisconnectButtonClick"
            android:text="@string/disconnect"
            android:textSize="40sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/statusBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons"
        android:text="@string/connectMessage"
        android:visibility="invisible" />

</RelativeLayout>